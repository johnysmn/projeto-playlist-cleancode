{
    "files.exclude": {
        "**/*.pyc": {"when": "$(basename).py"},
        "**/__pycache": true,
        "**/*.pytest_cache": true,
    },
    "editor.inlineSuggest.edits.allowCodeShifting": "never",
    "editor.inlineSuggest.edits.renderSideBySide": "never",
    "editor.inlineSuggest.enabled": false,
    "editor.inlineSuggest.syntaxHighlightingEnabled": false,
    "editor.inlineSuggest.triggerCommandOnProviderChange": false,
    "editor.screenReaderAnnounceInlineSuggestion": false,
    "editor.suggest.showInlineDetails": false,
    "editor.quickSuggestions": {
        "other": "off"
    },
    "editor.suggest.selectionMode": "never"
}